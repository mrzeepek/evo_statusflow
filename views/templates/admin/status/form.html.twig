
{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <h3 class="card-header">
          {% if app.request.get('_route') ends with 'create' %}
            <i class="material-icons">add_circle_outline</i> {{ 'Add New Status'|trans({}, 'Modules.Evostatusflow.Admin') }}
          {% else %}
            <i class="material-icons">edit</i> {{ 'Edit Status'|trans({}, 'Modules.Evostatusflow.Admin') }}
          {% endif %}
        </h3>
        <div class="card-body">
          {{ form_start(statusForm) }}
            <div class="form-wrapper">
              {{ form_widget(statusForm) }}
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <a href="{{ path('evo_statusflow_status_index') }}" class="btn btn-outline-secondary">
                  {{ 'Cancel'|trans({}, 'Admin.Actions') }}
                </a>
                <button class="btn btn-primary" type="submit">
                  {{ 'Save'|trans({}, 'Admin.Actions') }}
                </button>
              </div>
            </div>
          {{ form_end(statusForm) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
